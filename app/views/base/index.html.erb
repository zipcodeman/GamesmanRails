<%-
content_for :head_javascripts do
  javascript_include_tag "foundation"
  javascript_include_tag "foundation/app"
  stylesheet_link_tag "foundation"
end
%>

<!-- Navigation Top Bar -->
 <div class="contain-to-grid">
    <nav class="top-bar">
        <ul>
            <li class="name"><h1><a href="#">Gamesman Menu</a></h1></li>
            <li class="toggle-topbar"><a href="#"></a></li>
        </ul>
        <!-- Actual Links -->
        <section>
            <ul class="left">
                <li class="has-dropdown active">
                  <a href="#">Games</a>
                    <ul class="dropdown">
                      <%- @games.each do |resource, parts| -%>
                        <%-
                        game_name = parts[0]
                        description = parts[1]
                        -%>
                        <ul>
                          <a href="#<%= resource -%>"><%= game_name -%></a>
                        </ul>
                      <%- end %>
                    </ul>
                </li>
            </ul>
        </section>
    </nav>
</div>
<!-- Header -->
<div class="row">
  <div class="twelve columns">
    <h1>Games</h1>
  </div>
</div>
<!-- Main Content -->
<%- @games.each do |resource, parts| -%>
  <%-
  game_name = parts[0]
  description = parts[1]
  -%>
  <a class="nostyle" name="<%= resource -%>" href="/game/<%= resource -%>/new">
    <div class="gameSection row">
        <div class="eight columns">
            <h1>
                <%= game_name %>
            </h1>
            <p><%= description %></p>
        </div>
      <div class="gameImage four columns">
        <%= image_tag "#{resource}.png" %>
      </div>
    </div>
  </a>
<%- end %>

<!-- Footer -->
<div class="row">
</div>