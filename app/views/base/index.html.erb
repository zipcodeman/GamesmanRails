<head>

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />

  <!-- IE Fix for HTML5 Tags -->
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

</head>
<body>
	 <!-- Navigation Top Bar -->
     <div class="contain-to-grid">
        <nav class="top-bar">
            <ul>
                <li class="name"><h1><a href="#">Gamesman Menu</a></h1></li>
                <li class="toggle-topbar"><a href="#"></a></li>
            </ul>
            <!-- Actual Links -->
            <section>
                <ul class="left">
                    <li class="has-dropdown active">
                    	<a href="#">Games</a>
                           <ul class="dropdown">
                             <li><h5><a href="#">Some Games Here</a></h5></li>
                             <li><a href="#">Sub Nav 2</a></li>
                             <li><a href="#">Sub Nav 3</a></li>
                          </ul>
                    </li>
                </ul>
            </section>
        </nav>
    </div>
	<!-- Header -->
    <div class="row">
    	<div class="twelve columns">
    		<h1>Games</h1>
    	</div>
    </div>
    <!-- Main Content -->
	<%- @games.each do |resource, parts| -%>
    <%-
    game_name = parts[0]
    description = parts[1]
    -%>
		<div class="gameSection row">
			<div class="eight columns">
			    <h1><a class="nostyle" href="/game/<%= resource -%>/new"><%= game_name %></a></h1>
          <p><%= description %></p>
			</div>
			<div class="gameImage four columns">
				<%= image_tag "#{resource}.png" %>
			</div>
		</div>
    <%- end %>
	
    <!-- Footer -->
  	<div class="row">
    
    </div>
</body>
</html>
